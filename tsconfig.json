        "./src/schema.ts",
        "./src/serialise.ts",
        "./src/utils.ts",
        "./test/src/module.test.ts",
        "./test/src/repo.test.ts",
        "./typings/chai/chai-assert.d.ts",
        "./typings/glob/glob.d.ts",
        "./typings/joi-assert/joi-assert.d.ts",
        "./typings/joi/joi.d.ts",
        "./typings/js-yaml/js-yaml.d.ts",
        "./typings/minimatch/minimatch.d.ts",
        "./typings/mkdirp/mkdirp.d.ts",
        "./typings/mocha/mocha.d.ts",
        "./typings/node/node.d.ts",
        "./typings/parsimmon/parsimmon.d.ts",
        "./typings/source-map-support/source-map-support.d.ts",
        "./typings/tsd.d.ts",
