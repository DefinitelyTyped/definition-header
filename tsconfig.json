{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "rootDir": ".",
        "sourceMap": true,
        "declaration": true,
        "noEmitOnError": true
    },
    "include": [
        "typings/",
        "src/**/*.ts",
        "test/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "src/**/*.d.ts",
        "test/**/*.d.ts"
    ]
}